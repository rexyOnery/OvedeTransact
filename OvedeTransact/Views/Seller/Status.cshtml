
@{
    ViewData["Title"] = "Status";
}


<style>
    .hidden {
        display: none;
    }
</style>
<input type="hidden" id="brighoStatus" />

<div class="section mt-2 text-center">
    <h1>Transaction Status</h1>
    <h4>Enter the Transaction Number</h4>
</div>
<div class="section mb-5 p-2">
    <form>
        <div class="form-group basic">
            <input type="text" class="form-control verification-input" disabled id="smscode" placeholder="••••"
                   maxlength="15">
        </div>

        <div class="form-button-group transparent">
            <div class="spinner-grow text-info hidden" id="veriSpinner" role="status"></div>
            <button type="button" id="btnVerifyStatus" class="btn btn-primary btn-block btn-lg">Check Status</button>
            <button class="btn btn-primary btn-block shadowed hidden" type="button" disabled id="btnProgress">
                <span class="spinner-border spinner-border-sm mr-05" role="status" aria-hidden="true"></span>
                Processing...
            </button>
        </div>

    </form>
</div>


<!-- DialogIconedDanger -->
<div class="modal fade dialogbox" id="DialogIconedDanger" data-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-icon text-danger">
                <ion-icon name="close-circle"></ion-icon>
            </div>
            <div class="modal-header">
                <h5 class="modal-title">Error</h5>
            </div>
            <div class="modal-body">
                Transaction Number verification failed. <br /> Please enter the correct transaction number.
            </div>
            <div class="modal-footer">
                <div class="btn-inline">
                    <a href="#" class="btn" data-dismiss="modal">CLOSE</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- * DialogIconedDanger -->
<!-- DialogIconedSuccess -->
<div class="modal fade dialogbox" id="DialogIconedSuccess" data-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-icon text-success">
                <ion-icon name="checkmark-circle"></ion-icon>
            </div>
            <div class="modal-header">
                <h5 class="modal-title">Transaction Number</h5>
            </div>
            <div class="modal-body">
                <strong class="text-primary">VERIFIED FOR</strong>. <br><label id="transDec"></label>.<br />
                <b>Transaction Status:</b> <strong class="text-primary"><label id="transStatus"></label></strong><br />
                <b>Item Status: </b><strong class="text-primary"><label id="picked"></label></strong>
            </div>
            <div class="modal-footer">
                <div class="btn-inline">
                    <a href="/seller" class="btn">CLOSE</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- * DialogIconedSuccess -->
